<included>
    <appender name="plain-text" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Logback  pattern docs: http://logback.qos.ch/manual/layouts.html#conversionWord-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{X-B3-TraceId:-}][%X{user:-}][%X{path:-}] [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>
</included>